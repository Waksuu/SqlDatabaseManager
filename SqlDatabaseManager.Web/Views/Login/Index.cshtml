@model ConnectionInformationViewModel
@Html.AntiForgeryToken()
@{
	ViewData["Title"] = "Login";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="css/bootstrap.icon-large.min.css" rel="stylesheet">

<div class="container">

	<div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">

		<div class="row">
			<div class="iconmelon">
				<svg viewBox="0 0 32 32">
					<g filter="">
						<use xlink:href="#git"></use>
					</g>
				</svg>
			</div>
		</div>

		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="panel-title text-center">Connect to Server</div>
			</div>
			<div class="panel-body">
				<form asp-controller="Login" asp-action="Index" method="POST">
					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-tasks"></i></span>
						<input asp-for="ServerAddress" id="ServerAddress" type="text" class="form-control" name="ServerAddress" placeholder="Database address">
					</div>
					<span asp-validation-for="ServerAddress" class="text-danger"></span>
					<div class="input-group mt-3">
						<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						<input asp-for="Login" id="Login" type="text" class="form-control" name="Login" placeholder="Login">
					</div>
					<span asp-validation-for="Login" class="text-danger"></span>

					<div class="input-group mt-3">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
						<input asp-for="Password" id="Password" type="password" class="form-control" name="Password" placeholder="Password">
					</div>
					<span asp-validation-for="Password" class="text-danger"></span>

					<div class="form-group">
						<div class="controls">
							<select asp-for="DatabaseType" asp-items="Html.GetEnumSelectList<DatabaseType>()" class="form-control mt-3" id="databaseTypes">
								<option value = "" selected hidden>Database Type</option>
							</select>
							<button type="submit" href="#" class="btn btn-primary pull-right mt-3">
								<i class="glyphicon glyphicon-log-in"></i> Log in
							</button>
						</div>
						<span asp-validation-for="DatabaseType" class="text-danger"></span>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>